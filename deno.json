{
  "version": "0.0.1",
  "description": "General boilerplate library for deno from Color in Code",
  "author": "Color in Code <(colorincodeme@gmail.com)>",
  "homepage": "https://github.com/colorincode/deno",
  "tasks": {
    "patch-fontawesome":"deno run --allow-all ./utils/patch-fontawesome-sass.ts",
    "clean": "deno run --allow-all clear.ts",
    "dev": "deno run --allow-all --watch dev.ts",
    "prod": "deno run --allow-all prod.ts",
    "lint": "biome lint ./prod",
    "lint:fix": "biome check --write ./prod"
},
"nodeModulesDir": "auto",
  "imports": {
    "@biomejs/biome": "npm:@biomejs/biome@^1.9.4",
    "autoprefixer": "npm:autoprefixer@^10.4.21",
    "browserslist": "npm:browserslist",
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/fmt": "jsr:@std/fmt@1",
    "@std/fs": "jsr:@std/fs@^1.0.15",
    "@std/dotenv": "jsr:@std/dotenv@0",
    "@std/http": "jsr:@std/http@^1.0.13",
    "@std/path": "jsr:@std/path@1",
    "@std/assert": "jsr:@std/assert@^1.0.12",
    "@std/cli": "jsr:@std/cli@^1.0.15",
    "@std/jsonc": "jsr:@std/jsonc@1",
    "@std/net": "jsr:@std/net@1",
    "@std/testing": "jsr:@std/testing@^1.0.10",
    "@trpc/client": "npm:@trpc/client@^11.0.0",
    "@trpc/server": "npm:@trpc/server@^11.0.0",
    "esbuild": "npm:esbuild@^0.25.1",
    "gsap": "npm:gsap@^3.12.7",
    "lighthouse": "npm:lighthouse@^12.5.1",
    "lightningcss": "npm:lightningcss@^1.29.3",
    "postcss": "npm:postcss@^8.5.3",
    "postcss-import": "npm:postcss-import@^16.1.0",
    "postcss-loader": "npm:postcss-loader@^8.1.1",
    "postcss-utilities": "npm:postcss-utilities@^0.8.4",
    "posthtml": "npm:posthtml@^0.16.6",
    "posthtml-include": "npm:posthtml-include@^2.0.1",
    "sass": "npm:sass@^1.86.0",
    "sharp": "npm:sharp@^0.33.5",
    "zod": "npm:zod@^3.24.2"
  },
  "lint": {
    "enabled": false
  },
  "unstable": [
    "kv",
    "net",
    "http",
    "fs",
    "ffi",
    "cron",
    "temporal",
    "webgpu",
    "unsafe-proto",
    "otel",
    "webgpu"
  ],
  "fmt": {
    "lineWidth": 80,
    "semiColons": false,
    "useTabs": false,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "src/"
    ],
    "exclude": [
      ".deno-kit/**",
      "!fixtures"
    ]
  },
    "compilerOptions": {
      "exactOptionalPropertyTypes": true,
      
      "lib": [
        "esnext",
        "deno.window",
        "deno.ns",
        "deno.unstable"
      ]
    },
    "devDependencies": {
      "@biomejs/biome": "npm:@biomejs/biome@^1.9.4",
      "@types/deno": "^2.2.0",
      "@types/node": "^22.10.5",
      "eslint": "^8.57.1",
      "eslint-config-stylelint": "^22.0.0",
      "postcss": "^8.4.49",
      "postcss-custom-properties": "^14.0.4",
      "postcss-import": "^16.1.0",
      "postcss-modules": "^6.0.1",
      "postcss-nested": "^6.2.0",
      "rimraf": "^6.0.1"
    },
    "peerDependencies": {
      "typescript": "^5.6.2"
    },
    "dependencies": {
      "@types/websocket": "^1.0.10",
      "browserslist": "^4.24.4",
      "glob": "^11.0.1",
      "lightningcss": "^1.29.1",
      "posthtml": "^0.16.6",
      "posthtml-include": "^2.0.1",
      "prettier": "^3.4.2",
      "sass": "^1.83.1",
      "sharp": "^0.33.5"
    }
}
